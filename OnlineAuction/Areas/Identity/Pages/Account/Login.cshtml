@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="main container container-border add-lot">
    <h2 class="title title--center">@ViewData["Title"]</h2>
    <form id="account" method="post">
        <div asp-validation-summary="All" class="form-item__error"></div>
        <div class="main__form-item form-item">
            <label class="form-item__label" asp-for="Input.Email"></label>
            <span asp-validation-for="Input.Email" class="form-item__error--center"></span>
            <input class="form-item__input container-border" asp-for="Input.Email" class="form-control" />
        </div>
        <div class="main__form-item form-item">
            <label class="form-item__label" asp-for="Input.Password"></label>
            <span asp-validation-for="Input.Password" class="form-item__error--center"></span>
            <input class="form-item__input container-border" asp-for="Input.Password" class="form-control" />
        </div>
        <div class="main__form-item form-item form-item__buttons-wrapper">
            <button type="submit" class="button form-item__button">Log in</button>
        </div>
        <div class="main__form-item form-item">
            <p class="form-item__link">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
        </div>
    </form>
</div>
@section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
