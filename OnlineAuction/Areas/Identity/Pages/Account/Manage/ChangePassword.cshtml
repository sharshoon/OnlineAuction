@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />
<form id="change-password-form" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="main__form-item form-item profile__form-item">
        <label asp-for="Input.OldPassword" class="form-item__label"></label>
        <span asp-validation-for="Input.OldPassword" class="form-item__error"></span>
        <input asp-for="Input.OldPassword" class="form-item__input container-border" />
    </div>
    <div class="main__form-item form-item profile__form-item">
        <label asp-for="Input.NewPassword" class="form-item__label"></label>
        <span asp-validation-for="Input.NewPassword" class="form-item__error"></span>
        <input asp-for="Input.NewPassword" class="form-item__input container-border" />
    </div>
    <div class="main__form-item form-item profile__form-item">
        <label asp-for="Input.ConfirmPassword" class="form-item__label"></label>
        <span asp-validation-for="Input.ConfirmPassword" class="form-item__error"></span>
        <input asp-for="Input.ConfirmPassword" class="form-item__input container-border" />
    </div>
    <div class="main__form-item form-item form-item__buttons-wrapper">
        <button type="submit" class="button form-item__button">Update</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}